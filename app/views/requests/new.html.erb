<h2 class="my-5">Our amazing coworking space is full this month.</h2>
<h3 class="my-5">Please fill in the below form to join our waitlist.</h2>


<div class="row">
  <div class="col-12">
    <%= form_for(@request) do |f| %>
    <% if @request.errors.any? %>
      <ul class = "alert alert-danger">
        <% @request.errors.full_messages.each do |message| %>
          <li ><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <div class="form-group">
        <%= f.label :name , "Your Name *"%>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email , "Your Email *"%>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :phone, "Your Phone Number *" %>
        <%= f.telephone_field :phone, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :bio, "A Brief Biography *" %>
        <%= f.text_area :bio, class: 'form-control', rows: 5 %>
      </div>
      <div class="form-group">
        <%= f.submit "Join our Waitlist", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<h5 class = "mt-3">Every quarter you will receive an email : Don't forget to re-confirm your spot to stay in the waitlist.</h3>
